(executable
 (name graphsql)
 (modules ast parser scanner graphsql))

(rule
 (targets ast.cmo)
 (deps ast.ml)
 (action (run ocamlc -w A -c %{deps})))

(rule
 (targets scanner.ml)
 (deps scanner.mll)
 (action (run ocamllex %{deps})))

(rule
 (targets parser.ml parser.mli)
 (deps parser.mly)
 (action (run ocamlyacc %{deps})))

